{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": false,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "removeComments": true,
    "importHelpers": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": ".",
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@actions": ["actions"],
      "@utils": ["utils"],
      "@constants": ["constants"],
      "@reducers": ["reducers"]
    },
    "lib": ["es6", "dom", "es7"]
  },
  "exclude": ["node_modules", "build", "test"],
  "include": ["./typings", "./src/**/*.*"]
}
